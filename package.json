{
	"name": "node-ts-template",
	"version": "1.0.0",
	"main": "src/server.ts",
	"scripts": {
		"dev": "nodemon",
		"start": "pnpm run build && node build/server.js",
		"build": "rimraf build && tsc",
		"format": "pnpm biome format --write ./src",
		"lint": "pnpm biome lint ./src --apply-unsafe",
		"check": "pnpm biome check ./src --apply"
	},
	"license": "ISC",
	"dependencies": {
		"module-alias": "^2.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.4.1",
		"@types/node": "^20.10.2",
		"nodemon": "^3.1.0",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.3"
	}
}
